@model IEnumerable<DemoProject1.Models.CartItems>

@{
    ViewData["Title"] = "GetCart";
    ViewBag.cnt = Model.Count();
}

<h1>Cart items are listed below:</h1>
<br />
<br />

@foreach (var item in Model)
{
    <div class="row p-2" style="height:120px; border:1px solid blue">

        <div class="col-3" style="height:100px">
            <img src="~/Images/@item.Product.ProductImg" class="card-img" style="height:100%; width:50px" />
        </div>
        <div class="col-6 p-2">
            <p class="card-title h5"><b>@item.Product.Name</b></p>
            <p>Rs - @item.Product.Price</p>
            <p>Quantity - @item.Count</p>
        </div>
        <div class="col-3 p-2">
            <a class="btn btn-primary" asp-action="RemoveCartItem" asp-route-id="@item.CartItemsId" style="font-size:1.2em">Delete</a>
        </div>

    </div>
    <br />

}

<br />
<div class="col-12  ml-4 mr-4 mb-1 p-1 d-flex justify-content-around">
    <div class="col-lg-5 p-2">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index" style="font-size:1.4em">Go to Homepage</a>
    </div>
    <div class="col-2">

    </div>
    <div class="col-5 p-2">
        <a class="btn btn-primary" asp-controller="Cart" asp-action="PlaceOrder" style="font-size:1.4em">Place Order</a>
    </div>
</div>

